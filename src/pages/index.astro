                <div class="social-links">
                    <a href="https://github.com/kimtastic"><i data-lucide="github"></i></a>
                    <a href="https://www.linkedin.com/in/kimberlyjeske/"><i data-lucide="linkedin"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // TypeScript: declare lucide on window
        // @ts-ignore
        declare global {
            interface Window {
                lucide?: any;
            }
        }
        document.addEventListener('DOMContentLoaded', () => {
            // Lucide Icons
            if (window.lucide && typeof window.lucide.createIcons === 'function') {
                window.lucide.createIcons();
            }

            // Mobile Menu Toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const desktopCtaButton = document.getElementById('desktop-cta');

            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', () => {
                    mobileMenu.classList.toggle('is-open');
                });
            }
            
            // Show desktop CTA on larger screens
            if (window.innerWidth >= 768 && desktopCtaButton) {
                desktopCtaButton.style.display = 'inline-block';
            }
            window.addEventListener('resize', () => {
                 if (window.innerWidth >= 768 && desktopCtaButton) {
                    desktopCtaButton.style.display = 'inline-block';
                } else if(desktopCtaButton) {
                    desktopCtaButton.style.display = 'none';
                }
            });

            // Smooth scrolling for navigation links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    const self = e.currentTarget as HTMLAnchorElement;
                    // Allow normal link behavior for non-section links
                    if (self.getAttribute('href') === '#') {
                        e.preventDefault();
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                        return;
                    }
                    
                    const targetId = self.getAttribute('href');
                    let targetElement: Element | null = null;
                    if (targetId) {
                        targetElement = document.querySelector(targetId);
                    }

                    if (targetElement) {
                        e.preventDefault();
                        // Close mobile menu on link click
                        if (mobileMenu && mobileMenu.classList.contains('is-open')) {
                            mobileMenu.classList.remove('is-open');
                        }
                        
                        targetElement.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });
    </script>
