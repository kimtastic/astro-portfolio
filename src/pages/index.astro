---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kim Jeske - Portfolio</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        /* Starlight-inspired Theme */
        :root {
            --color-dark-bg: #171820;
            --color-dark-card: #23262f;
            --color-border: #363a4f;
            --color-lavender: #A78BFA;
            --color-lavender-dark: #8B5CF6;
            --color-yellow-accent: #FBBF24;
            --color-text-light: #E5E7EB;
            --color-text-dark: #9CA3AF;
            --font-sans: 'Inter', sans-serif;
        }

        body {
            background-color: var(--color-dark-bg);
            color: var(--color-text-light);
            font-family: var(--font-sans);
            margin: 0;
            line-height: 1.6;
            font-size: 16px;
        }

        /* Layout */
        .container {
            max-width: 1100px;
            margin-left: auto;
            margin-right: auto;
            padding-left: 1.5rem;
            padding-right: 1.5rem;
        }

        main {
            padding-top: 5rem; /* Header height */
        }

        section {
            padding-top: 5rem;
            padding-bottom: 5rem;
        }

        /* Header */
        .site-header {
            background-color: rgba(23, 24, 32, 0.8);
            backdrop-filter: blur(10px);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 50;
            border-bottom: 1px solid var(--color-border);
        }

        .site-header .header-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

        .site-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--color-text-light);
            text-decoration: none;
        }

        .main-nav {
            display: none;
        }

        .main-nav a {
            color: var(--color-text-dark);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .main-nav a:hover {
            color: var(--color-lavender);
        }

        .mobile-menu-button {
            background: none;
            border: none;
            color: var(--color-text-light);
            cursor: pointer;
        }
        
        .mobile-menu {
            display: none;
            padding: 0 1.5rem 1rem;
        }

        .mobile-menu.is-open {
            display: block;
        }
        
        .mobile-menu a {
            display: block;
            padding: 0.5rem 0;
            color: var(--color-text-dark);
            text-decoration: none;
            font-weight: 500;
        }

        /* Buttons */
        .button {
            display: inline-block;
            font-weight: 700;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            text-decoration: none;
            transition: background-color 0.3s ease;
            border: none;
            cursor: pointer;
            text-align: center;
        }

        .button-primary {
            background-color: var(--color-lavender);
            color: white;
        }

        .button-primary:hover {
            background-color: var(--color-lavender-dark);
        }

        .button-secondary {
            background-color: var(--color-dark-card);
            color: var(--color-text-light);
        }

        .button-secondary:hover {
            background-color: #363a4f;
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding-top: 6rem;
            padding-bottom: 8rem;
        }

        .hero h1 {
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 1rem;
            max-width: 36rem;
            margin-left: auto;
            margin-right: auto;
        }

        .hero p {
            font-size: 1.125rem;
            color: var(--color-text-dark);
            margin-bottom: 2rem;
            max-width: 48rem;
            margin-left: auto;
            margin-right: auto;
        }
        .hero .highlight-lavender { color: var(--color-lavender); }
        .hero .highlight-yellow { color: var(--color-yellow-accent); }
        .hero-actions { display: flex; justify-content: center; gap: 1rem; }

        /* About Section */
        .about-section { background-color: var(--color-dark-card); }
        .about-grid { display: grid; gap: 3rem; align-items: center; }
        .about-grid img { border-radius: 0.5rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1); width: 100%; }
        .about-content h2 { font-size: 2rem; font-weight: 700; margin-bottom: 1rem; }
        .about-content p { color: var(--color-text-dark); margin-bottom: 1rem; }
        .skills-list { display: flex; flex-wrap: wrap; gap: 0.5rem; }
        .skill-tag { background-color: #363a4f; color: var(--color-text-light); font-size: 0.875rem; font-weight: 500; padding: 0.25rem 0.75rem; border-radius: 9999px; }

        /* Timeline Section */
        .timeline-container { max-width: 48rem; margin: 0 auto; }
        .timeline-heading { text-align: center; font-size: 2rem; font-weight: 700; margin-bottom: 4rem; }
        .timeline-wrapper { position: relative; }
        .timeline-line { position: absolute; left: 1rem; top: 0; height: 100%; width: 2px; background-color: var(--color-border); }
        .timeline-item { margin-bottom: 3rem; padding-left: 3rem; position: relative; }
        .timeline-item:last-child { margin-bottom: 0; }
        .timeline-icon { position: absolute; left: 0; top: 0.25rem; width: 2rem; height: 2rem; background-color: var(--color-lavender); border-radius: 50%; display: flex; align-items: center; justify-content: center; ring: 8px; box-shadow: 0 0 0 8px var(--color-dark-bg); }
        .timeline-icon i { color: white; width: 1rem; height: 1rem; }
        .timeline-card { background-color: var(--color-dark-card); padding: 1.5rem; border-radius: 0.5rem; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .timeline-date { font-size: 0.875rem; font-weight: 600; color: var(--color-yellow-accent); margin-bottom: 0.25rem; }
        .timeline-title { font-size: 1.25rem; font-weight: 700; color: var(--color-text-light); }
        .timeline-subtitle { color: var(--color-text-dark); margin-bottom: 0.5rem; }
        .timeline-description { font-size: 0.875rem; color: var(--color-text-dark); }

        /* Content Section */
        .content-section { background-color: var(--color-dark-card); }
        .content-heading { text-align: center; font-size: 2rem; font-weight: 700; margin-bottom: 3rem; }
        .content-list { max-width: 48rem; margin: 0 auto; display: grid; gap: 1.5rem; }
        .content-item-link { display: block; background-color: var(--color-dark-bg); padding: 1.5rem; border-radius: 0.5rem; text-decoration: none; display: flex; align-items: center; gap: 1.5rem; transition: background-color 0.3s ease; }
        .content-item-link:hover { background-color: #363a4f; }
        .content-icon-wrapper { flex-shrink: 0; width: 3rem; height: 3rem; background-color: rgba(167, 139, 250, 0.2); color: var(--color-lavender); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center; }
        .content-icon-wrapper i { width: 1.5rem; height: 1.5rem; }
        .content-text .type { font-size: 0.875rem; color: var(--color-yellow-accent); }
        .content-text .title { font-size: 1.125rem; font-weight: 700; color: var(--color-text-light); }
        .content-text .subtitle { color: var(--color-text-dark); }
        .content-arrow { color: var(--color-lavender); margin-left: auto; opacity: 0; transition: opacity 0.3s ease; }
        .content-item-link:hover .content-arrow { opacity: 1; }

        /* Contact Section */
        .contact-section { text-align: center; }
        .contact-section h2 { font-size: 2rem; font-weight: 700; margin-bottom: 1rem; }
        .contact-section p { color: var(--color-text-dark); margin-bottom: 2rem; max-width: 42rem; margin-left: auto; margin-right: auto; }
        .contact-buttons { display: flex; flex-direction: column; justify-content: center; align-items: center; gap: 1rem; }
        .contact-buttons a { width: 100%; display: flex; align-items: center; justify-content: center; gap: 0.5rem; }

        /* Footer */
        .site-footer { border-top: 1px solid var(--color-border); }
        .footer-content { display: flex; flex-direction: column; align-items: center; justify-content: space-between; padding-top: 1.5rem; padding-bottom: 1.5rem; }
        .footer-content p { color: var(--color-text-dark); font-size: 0.875rem; }
        .social-links { display: flex; gap: 1rem; margin-top: 1rem; }
        .social-links a { color: var(--color-text-dark); transition: color 0.3s ease; }
        .social-links a:hover { color: var(--color-lavender); }

        /* Responsive Styles */
        @media (min-width: 768px) {
            .main-nav { display: flex; gap: 2rem; }
            .mobile-menu-button { display: none; }
            .hero h1 { font-size: 3.75rem; }
            .hero p { font-size: 1.25rem; }
            .about-grid { grid-template-columns: repeat(5, 1fr); }
            .about-grid .about-image { grid-column: span 2 / span 2; }
            .about-grid .about-content { grid-column: span 3 / span 3; }
            .contact-buttons { flex-direction: row; }
            .contact-buttons a { width: auto; }
            .footer-content { flex-direction: row; }
            .social-links { margin-top: 0; }
        }
    </style>
</head>
